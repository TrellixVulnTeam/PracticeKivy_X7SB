<main_kv>:
	cols: 3
	
	AnchorLayout:
		anchor_x: 'left'
		anchor_y: 'center'
	
		canvas:
			Color:
				rgb: [1, 0, 0]
			Rectangle:
				pos: self.pos
				size: self.size
		Login:
			size_hint: [None, None]
			size: [app.x, app.y]

	
	AnchorLayout:
		anchor_x: 'center'
		anchor_y: 'center'
		canvas:
			Color:
				rgb: [0, 1, 0]
			Rectangle:
				pos: self.pos
				size: self.size
		Home:
			size_hint: [None, None]
			size: [app.x, app.y]
	
	AnchorLayout:
		anchor_x: 'right'
		anchor_y: 'center'
		canvas:
			Color:
				rgb: [0, 0, 1]
			Rectangle:
				pos: self.pos
				size: self.size

		Newtask:
			size_hint: [None, None]
			size: [app.x, app.y]

