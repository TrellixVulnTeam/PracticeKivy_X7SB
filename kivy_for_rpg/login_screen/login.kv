<LoginScreen>:
    Widget:
        pos_hint: {'x': 0 , 'y': 0.60}
        size_hint: 1, 0.40
        canvas:
            Color:
                rgb: 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos
            Ellipse:
                pos: self.center_x - 110, self.center_y - 110
                size: 220, 220
                source: 'purplegradient.png'
            Rectangle:
                pos: self.center_x - 70, self.center_y - 70
                size: 140, 140
                source: 'sword.png'
    Widget:
        pos_hint: {'x': 0, 'y' : 0}
        size_hint: 1, 0.6
        canvas:
            Color:
                rgb: 0.494, 0, 0.592
            Rectangle:
                size: self.size
                pos: self.pos

    FloatLayout:
        size: root.width, root.height
        TextInput:
            hint_text: "username"
            multiline: False
            size_hint: 0.8, 0.05
            font_size: 26
            background_normal : ''
            background_color: 1, 1, 1, 1
            pos_hint: {"x": 0.1, "top": 0.45}
        TextInput:
            hint_text: "password"
            multiline: False
            size_hint: 0.8, 0.05
            font_size: 26
            background_normal: ''
            background_color: 1, 1, 1, 1
            pos_hint: {"x": 0.1, "top": 0.30}
        Button:
            text: "Login"
            size_hint: 0.8, 0.08
            pos_hint: {"center_x": 0.5, "top": 0.15}
            background_normal: ''
            background_color: 0.38, 0.92, 1, 0.8
