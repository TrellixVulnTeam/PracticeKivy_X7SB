            background_normal: ''
            background_down: ''
            background_color: 0.40, 1, 1, 1
            color: 0, 0, 0, 1
            size_hint: 0.2, 0.05
            pos_hint: {'x': 0.1, 'y': 0.1}
            on_release: app.to_forgotpassword()

