
#:import Factory kivy.factory.Factory
<MainBackground>:
    FloatLayout:
        size: root.size
        pos: root.pos
        canvas:
            Color:
                rgb: 0, 0.5, 0.5
            Rectangle:
                size: self.size
                pos: self.pos
        Button:
            size_hint: (0.8, 0.05)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            text: "Make Pop Up"
            on_release: Factory.ChangePasswordPopup().open()

<ChangePasswordPopup@Popup>:
    auto_dismiss: False
    id: popup
    title: "hello world"
    BoxLayout:
        orientation: 'vertical'
        TextInput:
            id: email
            hint_text: "email"
            multiline: False
            size_hint: 0.8, 0.07
            font_size: 24
            background_normal : ''
            background_color: 1, 1, 1, 1
            hint_text_color: 0.349, 0.298, 0.721, 1
            foreground_color: 0.349, 0.298, 0.721, 1
            cursor_color: 0.349, 0.298, 0.721, 1
            pos_hint: {"x": 0.1, "y": 0.45}
            padding_y: [12, 10]
        Button:
            text: "dismiss"
            on_release: root.dismiss()
