<ShadowButtons>:
    FloatLayout:
        size: root.width, root.height
        orientation: 'vertical'
        canvas:
            Color:
                rgb: 0.494, 0, 0.592
            Rectangle:
                size: self.size
                pos: self.pos

        Button:
            text: "my button"
            pos_hint: {"center_x": 0.5, "top": 0.30}
            color: 0, 0, 0, 1
            size_hint: 0.5 , 0.1
            font_size: 24
            #background_color: 0.40, 1, 1, 1
            background_normal: "bluebox.png"
            background_down: 'graybox.png'
